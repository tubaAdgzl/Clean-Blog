<%- include("partials/_header") -%>

<body>

  <%- include("partials/_navigation") -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Add New Post</h1>

          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form  action="/posts" method="POST" class="tm-contact-form">
          <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <input type="text" name="title" class="form-control rounded-0" placeholder="Post Title" required>
          </div>

          <div class="form-group floating-label-form-group controls">
            <textarea rows="8" name="detail" class="form-control rounded-0" placeholder="Post Detail"
                      required=""></textarea>
          </div>

          <div class="form-group floating-label-form-group controls">
            <input type="file" name="image" class="form-control-file rounded-0">
          </div>
            <button type="submit" class="btn btn-primary rounded-0 d-block ml-auto mr-0 tm-btn-animate tm-btn-submit tm-icon-submit"><span>Submit</span></button>
          </div>
        </div>
        </form>    
          
      </div>
    </div>
  </div>

  <hr>

  <%- include("partials/_footer") -%>

  <!-- Contact Form JavaScript -->
  <script src="js/jqBootstrapValidation.js"></script>
  <script src="js/contact_me.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
