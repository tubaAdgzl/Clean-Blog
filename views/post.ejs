<%- include("partials/_header") -%>

<body>

  <!-- Navigation -->
  <%- include("partials/_navigation") -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1>Man must explore, and this is exploration at its greatest</h1>
            <h2 class="subheading">Problems look mighty small from 150 miles up</h2>
            <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
              on August 24, 2019</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class=" offset-1 col-lg-11 col-md-10 mx-auto">
          <h2 class="section-heading"><%= post.title %></h2>
          <p><%= post.detail %></p>
          <p class="text-muted"><%= post.dateCreated %></p>
          <div class="tm-bg-gray tm-share-box">
            <div class="text-center">
              <a href="/posts/edit/<%= post._id %>" class="btn btn-primary p-0 mb-4 tm-btn-animate tm-btn-download tm-icon-download"><span>Update Details</span></a>	
            </div>	
            <div class="text-center">
              <a href="/posts/<%= post._id %>?_method=DELETE"
                onclick="return confirm('Are you sure?')" class="btn btn-danger p-0 tm-btn-animate tm-btn-download tm-icon-download"><span>Delete Photo</span></a>	
            </div>								
          </div>	
          <span class="caption text-muted">To go places and do things that have never been done before – that’s what living is all about.</span>

        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include("partials/_footer") -%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
